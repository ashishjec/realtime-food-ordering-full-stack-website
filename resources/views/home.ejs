<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h4 class="text-lg"><em>Are you hungry?</em></h6>
            <h1 class="text-8xl md:text-6xl font-bold">HungryFlix</h1>
            <a href="#" id="viewOrdersBtn" class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">View Orders</a>
            <a href="#" id="refreshBtn" class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Refresh</a>    
            <script>
                window.onload = function() {
                    var viewOrdersBtn = document.getElementById('viewOrdersBtn');
                    <% if(user && user.role === 'customer') { %>
                        viewOrdersBtn.href = "/customer/orders";
                        viewOrdersBtn.textContent = "View Orders";
                    <% } else { %>
                        viewOrdersBtn.href = "/admin/orders";
                        viewOrdersBtn.textContent = "View Orders";
                    <% } %>
                }
            </script>
        </div>
        <div class="w-1/2">
            <img src="/img/all.jpg" alt="">
        </div>
    </div>
</section>

<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All FOOD Items</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
        <% pizzas.forEach(function(pizza) { %>
        <div class="w-full md:w-64">
            <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="">
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">â‚¹<%= pizza.price %></span>
                    <% if (pizza.outOfStock) { %>
                        <p class="out-of-stock text-red-500">Out of Stock</p>
                        <button class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold bg-gray-400 cursor-not-allowed" disabled>
                            <span>+</span>
                            <span class="ml-4">Add to Cart</span>
                        </button>
                    <% } else { %>
                        <button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add to cart</span>
                        </button>
                    <% } %>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</section>

<script>
    document.getElementById("refreshBtn").addEventListener("click", function(event) {
        event.preventDefault(); // Prevent the default link behavior
        window.location.href = '/';
    });
</script>

<footer id="footer" class="bg-gray-800 text-white py-8">
    <!-- Footer content -->
</footer>
